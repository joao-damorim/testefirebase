<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.testefirebase.testefirebase.gui.CadastroActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content">

            <EditText
                android:id= "@+id/editCadNome"
                android:layout_width="match_parent"
                android:hint="Nome"
                android:layout_height="wrap_content"
                android:inputType="textCapCharacters"/>

            <EditText
                android:id= "@+id/editCadSobrenome"
                android:layout_width="match_parent"
                android:hint="Sobrenome"
                android:layout_height="wrap_content"
                android:inputType="textCapCharacters"/>

            <EditText
                android:id= "@+id/editCadAniversario"
                android:layout_width="match_parent"
                android:hint="Aniversario"
                android:layout_height="wrap_content"
                android:inputType="date"/>

            <EditText
                android:id= "@+id/editCadEmail"
                android:layout_width="match_parent"
                android:hint="E-mail"
                android:layout_height="wrap_content"
                android:inputType="textEmailAddress"/>

            <EditText
                android:id= "@+id/editCadSenha"
                android:layout_width="match_parent"
                android:hint="Senha"
                android:layout_height="wrap_content"
                android:inputType="textPassword"/>

            <EditText
                android:id= "@+id/editCadConfirmarSenha"
                android:layout_width="match_parent"
                android:hint="Confirmar Senha"
                android:layout_height="wrap_content"
                android:inputType="textPassword"/>

            <RadioGroup
                android:layout_width="match_parent"
                android:id="@+id/rgSexo"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_height="wrap_content" >

                <RadioButton
                    android:id="@+id/rbFeminino"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="true"
                    android:text="Feminino"/>
                <RadioButton
                    android:id="@+id/rbMasculino"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="true"
                    android:text="Masculino"/>

            </RadioGroup>

            <Button
                android:id="@+id/btnGravar"
                android:layout_width="match_parent"
                android:text="Gravar"
                android:layout_height="wrap_content" />





        </LinearLayout>
    </ScrollView>

</LinearLayout>
